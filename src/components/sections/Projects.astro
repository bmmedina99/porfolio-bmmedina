---
import { PROJECTS } from "@/constants";
import Section from "../Section.astro";
---

<Section name="Proyectos" label="Proyectos destacados">
  <div class="grid grid-cols-2 gap-4">
    {
      PROJECTS.map((project) => (
        <div class="w-full bg-[#12042d]/60 border border-[#3f007d] p-4 rounded-md focus:outline-none focus:right-2 focus:-ring-[#6347ff] transition-colors overflow-hidden">
          <div>
            <img
              class="object-cover w-full h-full rounded aspect-video "
              src={project.image}
              alt={project.title}
              width="800"
              height="450"
            />
          </div>
          <div class="p-6">
            <h3 class="mb-2 text-2xl font-semibold">{project.title}</h3>
            <p class="text-[#cbd5e1] text-pretty">{project.description}</p>
            <ul class="flex flex-wrap gap-2 my-4">
              {project.technologies.map((tech) => (
                <li class="bg-[#12042d]/40 text-[#c084fc] text-sm font-medium px-2.5 py-1 rounded-xl border border-[#7042f8]">
                  {tech}
                </li>
              ))}
            </ul>
          </div>
          <div class="flex gap-4 px-6 pb-6">
            {project.githubURL && (
              <a
                href={project.githubURL}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center px-4 py-2 border border-[#3f007d] hover:bg-[#3f007d]/60 text-[#b2b2ff] rounded-md transition-colors"
              >
                Ver c√≥digo
              </a>
            )}
            {project.demoURL && (
              <a
                href={project.demoURL}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center px-4 py-2 border border-[#3f007d] hover:bg-[#3f007d]/60 text-[#b2b2ff] rounded-md transition-colors"
              >
                Ver demo
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</Section>
