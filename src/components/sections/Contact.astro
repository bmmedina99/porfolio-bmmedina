---
import Section from '../Section.astro'
---

<Section name="Contacto" label="Contactáme">
  <form action="" class="space-y-4">
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-6 [&>div]:space-y-2"
    >
      <div>
        <label for="name" class="label"> Nombre </label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Tu nombre"
          required
        />
      </div>
      <div>
        <label for="email" class="label"> Correo electrónico </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="tu@correo.com"
          required
        />
      </div>
    </div>
    <div>
      <label for="subject"> Asunto </label>
      <input
        type="text"
        id="subject"
        name="subject"
        placeholder="Asunto del mensaje"
        required
      />
    </div>
    <div>
      <label for="message"> Mensaje </label>
      <textarea
        id="message"
        name="message"
        placeholder="Escríbeme un mensaje y te responderé lo más pronto posible"
        class="min-h-[100px] md:min-h-[150px] pr-20"
        autocapitalize="true"
        required></textarea>
    </div>
    <div class="grid place-content-center text-[#b2b2ff] text-center gap-2">
      <button type="submit" class="btn"> Enviar mensaje </button>
    </div>
  </form>
</Section>
