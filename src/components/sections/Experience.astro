---
import ExperienceDetails from '../ui/ExperienceDetails'
---

<section
  id="experiencia"
  aria-label="Experiencia profesional"
  class="main-section"
>
  <div class="z-10 max-w-4xl mx-auto">
    <header class="mb-10 text-center">
      <h2 class="text-[#6347ff] text-5xl font-semibold tracking-wide uppercase">
        Experiencia
      </h2>
    </header>
    <ExperienceDetails client:visible />
    <img
      src="/assets/svg/tech-skills-orbit.svg"
      alt="Ilustración de habilidades técnicas"
      aria-hidden="true"
      loading="lazy"
      class="absolute top-0 right-0 object-contain opacity-40 -z-10"
      width="600"
      height="600"
    />
  </div>
</section>
