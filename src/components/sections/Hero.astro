---
import { ChevronDown } from '../icons/Iconbase'
import Navbar from '../ui/Navbar'
---

<section
  id="home"
  class="relative flex flex-col items-center justify-center w-full min-h-screen"
>
  <div
    class="absolute z-10 overflow-hidden w-[600px] h-[600px] bg-gradient-to-br from-[#2a0e61]/60 to-transparent blur-3xl rounded-full animate-pulse"
  >
  </div>
  <div class="z-50 flex flex-col h-dvh">
    <div class="flex flex-col justify-center flex-grow gap-5 text-center">
      <h1 class="text-5xl sm:text-[6vw] font-bold uppercase">Brandon Medina</h1>
      <h2 class="text-xl font-medium uppercase text-pretty">
        Desarrollador Web
        <span class="gradient-text">Full Stack</span>,
        <span class="text-[#22d2f0]">Frontend</span> &amp;
        <span class="text-[#00ffaa]">Backend</span>
      </h2>
      <Navbar client:load />
    </div>
    <div class="flex items-center justify-center pb-12 animate-bounce">
      <a
        href="#experiencia"
        class="flex items-center w-6 h-10 rounded-full border-2 border-[#22d2f0]"
      >
        <ChevronDown title="Ir al inicio" />
      </a>
    </div>
  </div>
</section>
