---
import { ChevronDown } from '../icons/Iconbase'
import Navbar from '../ui/Navbar'
---

<section
  id="home"
  class="relative flex flex-col items-center justify-center min-h-screen"
>
  <div
    class="absolute overflow-hidden w-[600px] h-[600px] bg-gradient-to-br from-[#2a0e61]/60 to-transparent blur-3xl rounded-full animate-pulse"
    aria-hidden="true"
  >
  </div>
  <div class="z-10 px-4 mb-4 space-y-6 text-center uppercase">
    <h1 class="text-5xl font-bold md:text-7xl">Brandon Medina</h1>
    <p class="text-lg font-medium md:text-xl text-pretty">
      Desarrollador Web
      <strong class="gradient-text">Full Stack</strong>,
      <strong class="text-[#22d2f0]">Frontend</strong> &amp;
      <strong class="text-[#00ffaa]">Backend</strong>
    </p>
  </div>
  <Navbar client:load />
  <button
    type="button"
    class="absolute bottom-8 z-10 flex items-center w-6 h-10 rounded-full border-2 border-[#22d2f0] animate-bounce"
    aria-label="Ir a la secciÃ³n de experiencia"
    onclick="document.querySelector('#experiencia').scrollIntoView({ behavior: 'smooth' })"
  >
    <ChevronDown />
  </button>
</section>
