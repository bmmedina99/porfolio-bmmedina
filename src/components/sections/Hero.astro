---
import Icon from '../ui/Icon'
import Navbar from '../ui/Navbar'
---

<section
  id="home"
  class="relative flex flex-col items-center justify-center min-h-dvh"
>
  <div
    class="absolute overflow-hidden w-[600px] h-[600px] bg-gradient-to-br from-[#2a0e61]/60 to-transparent blur-3xl rounded-full animate-pulse"
    aria-hidden="true"
  >
  </div>
  <header class="z-10 px-4 text-center uppercase text-balance" role="banner">
    <h1 class="text-4xl font-bold md:text-7xl">Brandon Medina</h1>
    <h2 class="my-4 text-lg font-medium md:text-xl">
      Desarrollador Web&nbsp;
      <span class="gradient-text">Full&nbsp;Stack</span>,
      <span class="text-[#22d2f0]">Frontend</span> &amp;
      <span class="text-[#00ffaa]">Backend</span>
    </h2>
  </header>
  <Navbar client:visible />
  <button
    id="scrollDown"
    type="button"
    class="absolute bottom-8 flex items-center w-6 h-10 rounded-full border-2 border-[#22d2f0] animate-bounce"
    aria-label="Ir a la secciÃ³n de experiencia"
  >
    <Icon name="scroll-down" />
  </button>
</section>
<script is:inline>
  document.getElementById('scrollDown')?.addEventListener('click', () => {
    document.getElementById('experiencia')?.scrollIntoView({ behavior: 'smooth' })
  })
</script>
